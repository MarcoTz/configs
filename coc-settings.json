{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        ".stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell",
        "lhaskell"
      ],
      "settings" : { 
              "checkParents":"CheckOnSave",
              "checkProject":true,
              "plugin":{
                      "stan": {"globalOn":true}
              }
      }
    }
  }
}
