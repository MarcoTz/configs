syntax on	"enable syntax highlighting
set number	"show line numbers
set tabstop=4	"tabs show as 4 spaces
set showmatch	"highlight matching []{}()
set hlsearch	"highlight search matches
"binds nohlsearch (removes search highlights) to backspace
nnoremap <backspace> :nohlsearch<CR>

set hidden "allows having multiple open files
set smartcase "smart case in searches
set mouse=a "enable mouse
set autoindent "automatically keep indents
set incsearch "hightlight while searching
"filetype plugin
filetype plugin on
filetype plugin indent off
"plugin settings
"autogenerated by pathogen, turns it on
execute pathogen#infect()
call pathogen#helptags()

colorscheme base16-default "use base16 color scheme

"settings for syntactic
set statusline+=%#warningmsg#
set statusline+=%{SyntasticStatuslineFlag()}
set statusline+=%*

let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0
